{
  "name": "checkoutcom/shopware5",
  "type": "shopware-plugin",
  "description": "Checkout.com Payment Gateway for Shopware 5",
  "license": "MIT",
  "extra": {
    "installer-name": "CkoCheckoutPayment"
  },
  "require": {
    "ext-openssl": "*",
    "ext-json": "*",
    "checkout/checkout-sdk-php": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5"
  },
  "scripts": {
    "test": "vendor/phpunit/phpunit/phpunit --configuration phpunit.xml.dist --colors=always",
    "php-cs": "chmod +x php-cs-fixer && ./php-cs-fixer fix --config=.php_cs.dist --using-cache=no --allow-risky=yes"
  }
}
